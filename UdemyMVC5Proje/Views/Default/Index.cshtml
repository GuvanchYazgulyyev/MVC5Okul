@using UdemyMVC5Proje.Models.EntitiFramework;
@model List<TBLDersler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <td>DERS ID</td>
        <td>DERS AD</td>
        <td>İŞLEMLER</td>
    <tbody>
        @foreach (var drs in Model)
        {
            <tr>
                <td>@drs.DERSID</td>
                <td>@drs.DERSAD</td>
                <td>
                    <a href="/Default/Sil/ @drs.DERSID" class="btn btn-danger">Sil</a>
                    <a href="/Default/DersGetir/ @drs.DERSID" class="btn btn-primary">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Default/YeniDers" class="btn btn-info">Yeni Ders Ekle</a>

