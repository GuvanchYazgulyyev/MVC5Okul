@model UdemyMVC5Proje.Models.EntitiFramework.TBLNotlar
@{
    ViewBag.Title = "NotGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Ogrenci", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.DERSID)
        @Html.TextBoxFor(m => m.DERSID, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top:15px">
        @Html.LabelFor(m => m.OGRID)
        @Html.TextBoxFor(m => m.OGRID, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top:15px">
        @Html.LabelFor(m => m.VIZE)
        @Html.TextBoxFor(m => m.VIZE, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top:15px">
        @Html.LabelFor(m => m.FINAL)
        @Html.TextBoxFor(m => m.FINAL, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top:15px">
        @Html.LabelFor(m => m.PROJE)
        @Html.TextBoxFor(m => m.PROJE, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top:15px">
        @Html.LabelFor(m => m.ORTALAMA)
        @Html.TextBoxFor(m => m.ORTALAMA, new {@Value= @ViewBag.ort, @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top:15px">
        @Html.LabelFor(m => m.DURUM)
        @Html.TextBoxFor(m => m.DURUM, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.NOTID)
    <div style="margin-top:15px">
        <button type="submit" name="islem" value="HESAPLA" class="btn btn-info">Hesapla</button>
        <button type="submit" name="islem" value="NOTGUNCELLE" style="margin-left:30px" class="btn btn-primary">Güncelle</button>
        <br />
        @*Sonuç= @ViewBag.ort*@
    </div>

}


